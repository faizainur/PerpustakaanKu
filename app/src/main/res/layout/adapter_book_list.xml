<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View android:id="@+id/view_color_code"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_book"
        android:text="Title book"
        android:layout_toEndOf="@id/view_color_code"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/view_color_code"
        android:layout_below="@id/tv_title_book"
        android:id="@+id/linear_layout_categories">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_book_category"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/tv_book_category"
                android:text="Category"
                android:gravity="center_vertical"
                android:layout_marginStart="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_book_store"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Book Publisher"
                android:gravity="center_vertical"
                android:layout_marginEnd="5sp"
                android:id="@+id/tv_book_publisher"/>
        </LinearLayout>
    </LinearLayout>
    <RatingBar
        android:id="@+id/rating_book_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/view_color_code"
        android:layout_below="@id/linear_layout_categories"
        android:rating="3.5"
        android:numStars="5"
        android:isIndicator="true"
        android:stepSize="0.5"/>
</RelativeLayout>