<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/linear_layout_kode_warna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_book_details"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <RatingBar
        android:id="@+id/rating_book_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <!--region judul buku-->
    <RelativeLayout
        android:id="@+id/rl_judul_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/img_detail_judul_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_judul_buku"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tv_detail_label_judul_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_judul_buku"
            android:text="Judul Buku"/>
        <TextView
            android:id="@+id/tv_detail_judul_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_judul_buku"
            android:layout_below="@id/tv_detail_label_judul_buku"
            android:textSize="20dp"
            android:text="Origin"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginBottom="5dp"/>
    <!--endregion-->
    <!--region ISBN buku-->
    <RelativeLayout
        android:id="@+id/rl_isbn_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/img_detail_isbn_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_judul_buku"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tv_detail_label_isbn_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_isbn_buku"
            android:text="ISBN"/>
        <TextView
            android:id="@+id/tv_detail_isbn_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_isbn_buku"
            android:layout_below="@id/tv_detail_label_isbn_buku"
            android:textSize="20dp"
            android:text="1234567"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginBottom="5dp"/>
    <!--endregion-->
    <!--region penerbit-->
    <RelativeLayout
        android:id="@+id/rl_penerbit_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/img_detail_penerbit_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_judul_buku"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tv_detail_label_penerbit_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_penerbit_buku"
            android:text="Penerbit"/>
        <TextView
            android:id="@+id/tv_detail_penerbit_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_penerbit_buku"
            android:layout_below="@id/tv_detail_label_penerbit_buku"
            android:textSize="20dp"
            android:text="Bentang Pustaka"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginBottom="5dp"/>
    <!--endregion-->
</LinearLayout>